{% extends 'base.html.twig' %}

{% block title %}Nouvel évènement {% endblock %}

{% block body %}
<h1>Créer un nouvel événement</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn">Créer</button>
    {{ form_end(form) }}

    {% if form.vars.errors|length > 0 %}
        <div class="alert alert-danger">
            <ul>
                {% for error in form_errors(form) %}
                    <li>{{ error.message }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <a href="{{ path('calendar') }}">Retour au calendrier</a>

{% endblock %}
